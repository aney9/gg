<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second_activity"
    android:background="@drawable/new_fon">

    <ImageView
        android:id="@+id/anim"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/animation_rabbit"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nazad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_buttons"
        app:layout_constraintTop_toBottomOf="@+id/anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Назад"
        android:gravity="center"

        android:textColor="@color/material_dynamic_neutral100"
        />


</androidx.constraintlayout.widget.ConstraintLayout>