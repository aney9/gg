<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_fon"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tween"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Tween animation"
        android:layout_marginBottom="300dp"
        android:gravity="center"

        android:textColor="@color/material_dynamic_neutral100"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_buttons"
        app:layout_constraintBottom_toTopOf="@+id/tween"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Frame Animation"
        android:gravity="center"

        android:textColor="@color/material_dynamic_neutral100"
        />

</androidx.constraintlayout.widget.ConstraintLayout>